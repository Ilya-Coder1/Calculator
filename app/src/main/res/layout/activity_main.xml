<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  app:layout_constraintBottom_toTopOf="@id/ButtonsTable"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:id="@+id/firstNumber"
                android:textSize="60sp"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/operationSymbol"
                  android:textSize="60sp"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:maxLength="10"
                  android:id="@+id/secondNumber"
                  android:textSize="60sp"/>
    </LinearLayout>

    <TableLayout
            android:id="@+id/ButtonsTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/_7"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:id="@+id/Button7"
                    android:textSize="36sp" android:onClick="button7">
            </Button>

            <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/_8"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:id="@+id/Button8"
                    android:textSize="36sp" android:onClick="button8">

            </Button>

            <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/_9"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:id="@+id/Button9"
                    android:textSize="36sp" android:onClick="button9">
            </Button>

            <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/div"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:id="@+id/ButtonDiv"
                    android:textSize="36sp" android:onClick="buttonDiv">

            </Button>

            <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/delete"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:id="@+id/ButtonDel"
                    android:textSize="36sp" android:onClick="buttonDel">
            </Button>
        </TableRow>
        <TableRow>
            <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/_4"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:id="@+id/Button4"
                    android:textSize="36sp" android:onClick="button4">
            </Button>

            <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/_5"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:id="@+id/Button5"
                    android:textSize="36sp" android:onClick="button5">
            </Button>

            <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/_6"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:id="@+id/Button6"
                    android:textSize="36sp" android:onClick="button6">
            </Button>

            <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/mul"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:id="@+id/ButtonMul"
                    android:textSize="36sp" android:onClick="buttonMul">
            </Button>

            <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    tools:visibility="invisible"
                    android:textSize="36sp">
            </Button>
        </TableRow>

        <TableRow>

            <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/_1"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:id="@+id/Button1"
                    android:textSize="36sp" android:onClick="button1">
            </Button>
            <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/_2"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:id="@+id/Button2"
                    android:textSize="36sp" android:onClick="button2">
            </Button>

            <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/_3"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:id="@+id/Button3"
                    android:textSize="36sp" android:onClick="button3">
            </Button>

            <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/minus"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:id="@+id/ButtonMinus"
                    android:textSize="36sp" android:onClick="buttonMinus">
            </Button>

            <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    tools:visibility="invisible"
                    android:textSize="36sp">
            </Button>
        </TableRow>

        <TableRow>
            <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/_0"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:id="@+id/Button0"
                    android:textSize="36sp" android:onClick="button0">
            </Button>

            <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/ButtonComma"
                    android:text="@string/comma"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:textSize="36sp" android:onClick="buttonComma">
            </Button>

            <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:visibility="invisible"
                    android:text=""
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:textSize="36sp">
            </Button>

            <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/ButtonPlus"
                    android:text="@string/plus"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:textSize="36sp" android:onClick="buttonPlus">
            </Button>

            <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/ButtonEqual"
                    android:text="@string/equal"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:textSize="36sp" android:onClick="buttonEqual">
            </Button>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>